<div class="container show_link">
  <div class="m-l-lg">
    <p id="notice"><%#= notice %></p>

    <p>
      <strong>Link name:</strong>
      <%= @link.link_name %>
    </p>

    <p>
      <strong>Url:</strong>
      <%= link_to(@link.url, @link.url , :target => "_blank") %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @link.url_content.present? ? @link.url_content.html_safe : 'No Description Available' %>
    </p>

    <div class="text-left">
      <%= link_to 'Edit', edit_link_path(@link) ,:class => "btn btn-default"%>
      <%= link_to 'Back', links_path, :class => "btn btn-success" %>
    </div>
  </div>
</div>
