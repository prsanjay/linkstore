<%= simple_form_for(@link, defaults: { input_html: { class: 'form-horizontal' } },:validate => true ) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-lg-2"> </div>
    <div class="form-inputs col-lg-7">
      <%= f.input :link_name %>
      <%#= f.input :subject %>
      <%#= f.input :description %>
      <%= f.input :url %>
      <label>Description</label>
      <%= f.input :url_content,:label => false %>
      <div class="form-actions text-center">
        <%= f.button :submit,:class => "btn btn-success" %>
        <%= link_to 'Back', links_path,:class => "btn btn-default" %>
      </div>
    </div>
    <div class="col-lg-3"> </div>
  </div>
<% end %>
